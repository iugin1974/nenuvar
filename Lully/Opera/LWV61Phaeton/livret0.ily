\tocItem "LIVRET"
\markup\column {
  \act { LIVRET }
  \n-columns {
    \livretAct PROLOGUE
    \livretDescAtt\wordwrap-center {
      Le Theatre represente les Jardins du
      Palais de la Déesse Astrée.
    }
    \livretDescAtt\wordwrap-center\italic {
      Astrée est au milieu de ses compagnes,
      qui en dansant et en chantant tâchent
      de divertir cette Déesse.
    }
    \livretRef #'AACtroupe
    \livretPers\line { TROUPE DE COMPAGNES D'ASTRÉE }
    \livretVerC { Cherchons la Paix dans cet azile, }
    \livretVerC { Les Jeux suivront toujours nos pas. }
    \livretVerC { Quand on le veut, il est facile }
    \livretVer { De s'assurer un repos plein d'appas ; }
    \livretVerC { Mais les plaisirs d'un sort tranquille }
    \livretVer { Ne cherchent point qui ne les cherche pas. }
    \livretVerC { N'aions jamais rien d'inutile ; }
    \livretVerC { Fuions le bruit & l'embaras. }
    \livretVerC { Quand on le veut, il est facile }
    \livretVer { De s'assurer un repos plein d'appas ; }
    \livretVerC { Mais les plaisirs d'un sort tranquille }
    \livretVer { Ne cherchent point qui ne les cherche pas. }
    \livretRef #'AADastree
    \livretPers ASTRÉE
    \livretVerC { Dans cette paisible Retraite, }
    \livretVerC { Tout rit, tout répond à mes vœux ; }
    \livretVer { Mais ma felicité ne peut être parfaite, }
    \livretVer { Que le Ciel n'ait rendu tous les Mortels heureux. }
    \null
    \livretVerC { Quoique leur fureur inhumaine }
    \livretVerC { De leur Séjour ait osé me bannir : }
    \livretVerC { J'ai regret de les voir punir ; }
    \livretVerC { Je n'ai quitté la Terre qu'avec peine. }
    \livretVer { J'espere y voir encor le Siecle fortuné }
    \livretVer { Qu'à l'Univers naissant les Dieux avoient donné. }
    \livretVer { Le Sort veut que bien-tôt ce beau tems recommence. }
    \null
    \livretVerC { La douceur de l'esperance }
    \livretVerC { Doit flâter nos desirs. }
    \livretVerC { Charmons notre impatience }
    \livretVerC { Par d'innocens plaisirs. }

    \livretRef #'AAEtroupe
    \livretDescPage\wordwrap-center\italic {
      Les Compagnes d'Astrée dansent & chantent.
    }
    \livretRef #'AAFtroupe
    \livretPers\line { TROUPE DE COMPAGNES D'ASTRÉE }
    \livretVerC { Dans ces lieux, tout rit sens cesse ; }
    \livretVerC { L'amour veut rire avec nous. }
    \livretVerC { C'est un jeu quand il nous blesse, }
    \livretVer { Nous ne sentons que ses traits les plus doux. }
    \null
    \livretVerC { Qu'il est doux d'aimer sans peines ! }
    \livretVerC { Quel plaisir d'aimer en paix ! }
    \livretVerC { L'amour fait ici des chaînes }
    \livretVer { Qui charment trop pour les briser jamais. }

    \livretDesc\wordwrap-center\italic {
      Saturne vient trouver Astrée, pour l'inviter à retourner
      avec lui sur la terre.  Ce dieu a les mêmes Suivans qui
      l'accompagnoient au tems de l'Age "d'or :" les uns dansent &
      les autres "chantent ;" & Saturne même chante avec eux.
    }
    \livretRef #'AAGchoeur
    \livretPers\line { SATURNE & SES SUIVANS }
    \livretVerC { Que les Mortels se réjoüissent. }
    \livretVerC { Que les plaintes finissent. }
    \livretVerC { O ! l'heureux Tems ! }
    \livretVerC { Où tous les cœurs seront contens. }

    \livretRef #'AAHsaturne
    \livretPers SATURNE
    \livretVer { Un Heros qui mérite une gloire immortelle, }
    \livretVer { Au séjour des Humains aujourd'hui nous rapelle ; }
    \livretVer { Le Siecle qui du Monde a fait les plus beaux jours }
    \livretVer { Doit sous son regne heureux recommencer son cours. }
    \livretVer { Il calme l'Univers, le Ciel le favorise ; }
    \livretVerC { Son auguste Sang s'éternise. }
    \livretVer { Il voit combler ses vœux pas un Heros naissant : }
    \livretVer { Tout doit être sensible au plaisir qu'il ressent. }
    \livretVerC { Les Muses vont lui faire entendre }
    \livretVerC { Mille nouveaux concerts. }
    \livretVerC { De sa grandeur il se plaît à descendre. }
    \livretVer { Il fait mêler les Jeux à cent travaux divers. }
    \livretVer { Rien ne peut nous troubler, la Discorde est aux fers. }
    \livretVer { L'Envie en vain frémit de voir les biens qu'il cause ; }
    \livretVerC { Une heureuse paix est la loi }
    \livretVerC { Que ce Vainqueur impose. }
    \livretVerC { Son Tonnerre inspire l'effroi }
    \livretVerC { Dans le tems même qu'il repose. }

    \livretRef #'AAIastree
    \livretPers ASTRÉE
    \livretVerC { Suivons ce Heros, suivés-nous, }
    \livretVerC { Jeux innocens, rassemblés-vous, }
    \livretVerC { Regnez dans une paix profonde. }
    \livretVer { Rapellés l'heureux temps de l'enfance du Monde. }
    \livretVerC { Jeux innocens, rassemblez-vous, }
    \livretVer { Reprenez pour jamais vos charmes les plus doux. }

    \livretRef #'AAJchoeur
    \livretPers\line { LES CHŒURS }
    \livretVerC { Jeux innocens rassemblez-vous ; }
    \livretVer { Reprenez pour jamais vos charmes les plus doux. }

    \livretRef #'AAKair
    \livretDescPage\wordwrap-center\italic {
      La suite de Saturne & celle d'Astrée chantent & dancent ensemble.
    }

    \livretRef #'AAMchoeur
    \livretPers\line { LES CHŒURS }
    \livretVerC { Plaisirs, venés sans crainte, }
    \livretVerC { Venés vous rassembler : }
    \livretVerC { Le soin & la contrainte }
    \livretVerC { Ne viendront plus vous troubler. }
    \livretVerC { Le plus grands des Heros }
    \livretVerC { Vous reçoit dans son Empire. }
    \livretVerC { Que tout l'Univers admire }
    \livretVerC { L'Auteur d'un si doux repos. }
    \null
    \livretVerC { Il faut que tout fleurisse, }
    \livretVerC { Mortels, vivés heureux. }
    \livretVerC { La Paix & la Justice }
    \livretVerC { Vont regner avec les Jeux. }
    \livretVerC { Le plus grands des Heros }
    \livretVerC { Vous reçoit dans son Empire. }
    \livretVerC { Que tout l'Univers admire }
    \livretVerC { L'Auteur d'un si doux repos. }

    \livretRef #'AANsaturneAstree
    \livretPers\line { SATURNE, ASTRÉE, & LES CHŒURS }
    \livretVer { On a vû ce Heros terrible dans la Guerre : }
    \livretVer { Il fait par sa vertu le bonheur de la Terre, }
    \livretVerC { Sa Victoire l'a desarmé : }
    \livretVerC { Il fait son bonheur d'être aimé. }
    \livretDesc\wordwrap-center\italic {
      Fin du Prologue.
    }
  }
}
