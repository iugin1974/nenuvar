%{ n°1 %}\newBookPart #'()
\act "Acte Troisiéme"
\sceneDescription \markup \wordwrap-center {
  [Le Theatre change & represente le Palais du Sacrificateur de Cybele.]
}
\scene "Scene Premiere" "SCENE 1 : Atys"
\sceneDescription\markup { \smallCaps Atys seul. }
\pieceToc\markup\wordwrap { \smallCaps Atys :
  \italic { Que servent les faveurs que nous fait la Fortune } }
\includeScore "DAAatys"
%{ n°2 %}
\scene "Scene II" "SCENE 2 : Idas, doris, Atys"
\sceneDescription\markup\smallCaps { Atys, Doris, Idas. }
\pieceToc\markup { \smallCaps { Atys, Doris, Idas : }
  \italic { Peut-on icy parler sans feindre } }
\includeScore "DBAatysIdasDoris"
%{ n°3 %}
\scene "Scene III" "SCENE 3 : Atys"
\sceneDescription\markup { \smallCaps Atys seul. }
\pieceToc\markup\wordwrap { \smallCaps Atys :
  \italic { Nous pouvons nous flater de l'espoir le plus doux } }
\includeScore "DCAatys"
%{ n°4 %}
\scene "Scene IV" \markup \wordwrap {
  SCENE 4 : Atys, le Sommeil, Morphée, Phobetor, Phantase, les songes
  agréables, les songes funestes.
}
\sceneDescription\markup\column {
  \wordwrap-center { \smallCaps { Le Sommeil. } }
  \justify {
    [Le Theatre change & represente en Antre entouré
    de Pavots & de Ruisseaux, où le Dieu du Sommeil
    se vient rendre accompagné des Songes agreables
    & funestes.]
  }
  \null
  \wordwrap-center {
    \smallCaps [Atys dormant.
    \smallCaps { Le Sommeil, Morphée, Phobetor, Phantase, }
    Les Songes heureux. Les Songes funestes.]
  }
  \null
  \smaller\italic\justify {
    [Deux Songes joüants de la Violle.
    Deux Songes joüants du Theorbe.
    Six Songes joüants de la Flutte.
    Douze Songes funestes chantants.
    Huit Songes agreables dançants.
    Huit Songes funestes dançants.]
  }
}
\pieceToc\markup\wordwrap {
  \smallCaps { Le Sommeil, Morphée, Phantase, Phobetor : }
  \italic { Dormons, dormons tous } }
\includeScore "DDAsommeil"
%{ n°5 %}
\sceneDescription\markup\justify {
  [Les Songes agreables aprochent d'Atys, & par leurs chants,
  & par leurs dances, luy font connoistre l'amour de Cybele,
  & le bonheur qu'il en doit esperer.]
}
\pieceToc\markup\wordwrap { \smallCaps { Morphée, Phantase, Phobetor : }
  \italic { Escoute, escoute Atys la gloire qui t'appelle } }
\includeScore "DDBsommeil"
%{ n°6 %}
\pieceTocTitle "Entrée des songes agreables"
\includeScore "DDCsongesAgreables"
%{ n°7 %}
\pieceToc\markup\wordwrap { \smallCaps { Phobetor, Morphée, Phantase : }
  \italic { Gouste en paix chaque jour une douceur nouvelle } }
\includeScore "DDDsommeil"
%{ n°8 %}
\pieceTocTitle "Les songes agreables"
\includeScore "DDEsongesAgreables"
%{ n°9 %}
\sceneDescription\markup\justify {
  [Les songes funestes approchent d'Atys, & le menacent
  de la vengeance de Cybele s'il mesprise son amour,
  & s'il ne l'ayme pas avec fidelité.]
}
\pieceToc\markup\wordwrap { \smallCaps { Un songe funeste : }
  \italic { Garde-toy d'offencer un amour glorieux } }
\includeScore "DDFfuneste"
%{ n°10 %}
\pieceTocTitle "Entrée des Songes Funestes"
\includeScore "DDGsongesFunestes"
%{ n°11 %}
\pieceToc\markup\wordwrap { \smallCaps { Chœur des songes funestes : }
  \italic { L'amour qu'on outrage } }
\includeScore "DDHchoeur"
%{ n°12 %}
\pieceTocTitle "[Deuxieme entrée des songes funestes]"
\includeScore "DDIsongesFunestes"
\sceneDescriptionBottom\markup\justify {
  [Atys espouvanté par les Songes funestes, se resveille en sursaut,
  le Sommeil & les Songes disparoissent avec l'Antre où ils estoient,
  & Atys se retrouve dans le mesme Palais où il s'estois endormy.]
}
%{ n°13 %}\newBookPart #'(full-rehearsal)
\scene "Scene V" "SCENE 5 : Atys, Cybele, Melisse"
\sceneDescription\markup \smallCaps { Cybele, Atys, [& Melisse.] }
\pieceToc\markup\wordwrap { \smallCaps { Cyble, Atys : }
  \italic { Venez à mon secours ô Dieux ! ô justes Dieux ! } }
\includeScore "DEAcybeleAtys"
%{ n°14 %}
\scene "Scene VI" "SCENE 6 : Atys, Sangaride, Cybele, Melisse"
\sceneDescription \markup \smallCaps { Cybele, Atys, Sangaride, [& Melisse.] }
\pieceToc\markup\wordwrap { \smallCaps { Sangaride, Cybele, Atys : }
  \italic { J'ay recours à vostre puissance } }
\includeScore "DFAcybeleAtysSangaride"
%{ n°15 %}\newBookPart #'(full-rehearsal)
\scene "Scene VII" "SCENE 7 : Cybele, Melisse"
\sceneDescription\markup\smallCaps { Cybele, Melisse. }
\pieceToc\markup\wordwrap { \smallCaps { Cybele, Melisse : }
  \italic { Qu'Atys dans ses respects mesle d'indifference } }
\includeScore "DGAcybeleMelisse"
%{ n°16 %}
\scene "Scene VIII" "SCENE 8 : Cybele"
\sceneDescription\markup { \smallCaps Cybele [seule.] }
\pieceToc \markup { \smallCaps Cybele :
  \italic { Espoir si cher, & si doux } }
\includeScore "DHAcybele"
\actEnd "FIN DU TROISIESME ACTE"
