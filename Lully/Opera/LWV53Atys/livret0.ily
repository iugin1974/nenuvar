\appendixSection "LIVRET"
\appendixSubSection "Prologue"
\markuplines \column-lines {
  \livretAct LIVRET
  \fontsize-lines #1 \column-lines {
    \wordwrap-lines {
      Le livret présenté ici est tiré de l'ouvrage :
    }
    \line {
      \hspace #2 Philippe Quinault, \italic { Atys, tragedie en musique. }
      Paris : Christophe Ballard, 1676.
    }
    \line { \hspace #2 \with-url
      #"http://gallica.bnf.fr/ark:/12148/bpt6k5448680n"
      \typewriter\smaller http://gallica.bnf.fr/ark:/12148/bpt6k5448680n
    }
  }

  \livretAct PROLOGUE.
  \livretDescAtt \wordwrap {
    Le Theatre represente le Palais du Temps,
    où ce Dieu paroist au milieu des douze
    Heures du Jour, & des douze
    Heures de la Nuit.
  }
  \livretRef #'AABleTemps
  \livretPers \line { LE TEMPS. }
  \livretVer { En vain j'ay respecté la celebre memoire }
  \livretVer { Des Heros des siecles passez ; }
  \livretVer { C'est en vain que leurs Noms si fameux dans l'Histoire, }
  \livretVer { Du sort des noms communs ont esté dispensez : }
  \livretVer { Nous voyons un HEROS dont la brillante gloire }
  \livretVer { Les a presque tous effacez. }

  \livretRef #'AACchoeur
  \livretPers \line { Chœur des Heures. }
  \livretVerC { Ses justes Loix, }
  \livretVerC { Ses grands Exploits }
  \livretVerC { Rendent sa memoire éternelle : }
  \livretVerC { Chaque jour, chaque instant }
  \livretVerC { Adjouste encor à son Nom esclattant }
  \livretVerC { Une gloire nouvelle. }

  \livretRef #'AADair
  \livretDesc \wordwrap {
    La Déesse Flore conduite par un des Zephirs
    s'avance avec une Troupe de Nymphes qui
    portent divers ornements de Fleurs.
  }
  \livretRef #'AAEtempsFlore
  \livretPers \line { LE TEMPS. }
  \livretVer { La Saison des frimas peut-elle nous offrir }
  \livretVer { Les Fleurs que nous voyons paraistre ? }
  \livretVer { Quel DIEU les fait renaistre }
  \livretVer { Lorsque l'Hyver les fait mourir ? }
  \null
  \livretVer { Le Froid cruel regne encore ; }
  \livretVer { Tout est glacé dans les champs, }
  \livretVer { D'où vient que Flore }
  \livretVer { Devance le Printemps ? }

  \livretPers \line { FLORE. }
  \livretVer { Quand j'attens les beaux Jours, je viens toûjours trop tard, }
  \livretVer { Plus le Printemps s'avance, et plus il m'est cõtraire ; }
  \livretVerC { Son retour presse le départ }
  \livretVerC { Du HEROS à qui je veux plaire. }
  \null
  \livretVer { Pour luy faire ma cour, mes soins ont entrepris }
  \livretVer { De braver desormais l'Hyver le plus terrible, }
  \livretVer { Dans l'ardeur de luy plaire on a bien-tost apris }
  \livretVerC { A ne rien trouver d'impossible. }

  \livretRef #'AAFtempsFloreChoeur
  \livretPers \line { LE TEMPS & FLORE. }
  \livretVer { Les Plaisirs à ses yeux ont beau se presenter, }
  \livretVer { Si-tost qu'il voit Bellone, il quitte tout pour elle ; }
  \livretVerC { Rien ne peut l'arrester }
  \livretVerC { Quand la Gloire l'appelle. }
  \livretDesc \wordwrap {
    Le Chœur des Heures repete ces deux derniers Vers.
  }

  \livretRef #'AAGair
  \livretDesc \wordwrap {
    La suite de Flore commence des Jeux meslez de Dances & de Chants.
  }

  \livretRef #'AAHzephir
  \livretPers \line { UN ZEPHIR. }
  \livretVer { Le Printemps quelquefois est moins doux qu'il ne semble, }
  \livretVerC { Il fait trop payer ses beaux Jours ; }
  \livretVer { Il vient pour escarter les Jeux et les Amours, }
  \livretVerC { Et c'est l'Hyver qui les rassemble. }

  \livretRef #'AAIair
  \livretDesc \wordwrap {
    MELPOMENE qui est la Muse qui preside
    à la Tragedie, vient accompagnée d'une
    Troupe de Heros, elle est suivie d'Hercule,
    d'Antæe, de Castor, de Polluw, de Lincée,
    d'Idas, d'Eteocle, & de Polinice.
  }

  \livretRef #'AAJmelpomene
  \livretPers \line { MELPOMENE parlant à Flore. }
  \livretVer { Retirez-vous, cessez de prevenir le Temps ; }
  \livretVer { Ne me desrobez point de precieux instants : }
  \livretVerC { La puissante Cybele }
  \livretVer { Pour honorer Atys qu'elle a privé du jour, }
  \livretVerC { Veut que je renouvelle }
  \livretVerC { Dans une illustre Cour }
  \livretVerC { Le souvenir de son amour. }
  \null
  \livretVerC { Que l'agrément rustique }
  \livretVerC { De Flore et de ses Jeux, }
  \livretVerC { Cede à l'appareil magnifique }
  \livretVerC { De la Muse tragique, }
  \livretVerC { Et de ses Spectacles pompeux. }

  \livretRef #'AAKair
  \livretDesc \column {
    \wordwrap {
      La Suite de Melpomene prend la place de la Suite de Flore.
    }
    \wordwrap {
      Les Heros recommencent leurs anciennes querelles.
    }
    \wordwrap {
      HERCULE combat & lutte contre Antæe,
      Castor & Pollux combattent contre  Lyncée
      & Idas, & Eteocle combat contre son
      Frere Polynice.
    }
  }

  \livretRef #'AALirisMelpomeneFloreChoeur
  \livretDesc \wordwrap {
    IRIS, par l'ordre de Cybele, descend assis
    sur son Arc, pour accorder Melpomene & Flore.
  }
  \livretPers \line { IRIS parlant à MELPOMENE. }
  \livretVer { Cybele veut que Flore aujourd'huy vous seconde. }
  \livretVer { Il faut que les Plaisirs viennent de toutes parts, }
  \livretVer { Dans l'Empire puissant, où regne un nouveau MARS, }
  \livretVerC { Ils n'ont plus d'autre asile au monde. }
  \livretVer { Rendez-vous, s'il se peut, dignes de ses regards ; }
  \livretVerC { Joignez la beauté vive & pure }
  \livretVerC { Dont brille la Nature, }
  \livretVerC { Aux ornements des plus beaux Arts. }

  \livretDesc \wordwrap {
    Iris remonte au Ciel sur son Arc, & la Suite
    de Melpomene s'accorde avec la Suite de Flore.
  }

  \livretPers \line { MELPOMENE & FLORE. }
  \livretVer { Rendons-nous, s'il se peut, dignes de ses regards ; }
  \livretVerC { Joignons la beauté vive & pure }
  \livretVerC { Dont brille la Nature, }
  \livretVerC { Aux ornements des plus beaux Arts. }

  \livretPers \line { LE TEMPS, & le Chœur des Heures. }
  \livretVerC { Preparez de nouvelles Festes, }
  \livretVer { Profitez du loisir du plus grand des Heros ; }

  \livretPers \line { LE TEMPS, MELPOMENE & FLORE. }
  \livretVerC { Preparez/Preparons de nouvelles Festes }
  \livretVer { Profitez/Profitons du loisir du plus grand des HEROS. }

  \livretPers \line { Tous ensemble. }
  \livretVerC { Le temps des Jeux, et du repos, }
  \livretVer { Luy sert à mediter de nouvelles Conquestes. }

  \livretFinAct \line { Fin du Prologue. }
}
