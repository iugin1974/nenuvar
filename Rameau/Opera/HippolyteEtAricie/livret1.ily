\markup\n-columns {
  \livretAct\line { ACTE PREMIER }
  \livretDescAtt\center-column {
    \wordwrap-center { Le Théâtre représente un temple consacré à \smallCaps Diane : }
    \line { On y voit un autel. }
  }
  \livretScene\line { SCENE PREMIERE }
  \livretDescAtt\wordwrap-center { \smallCaps Aricie en Chasseresse. }
  \livretRef #'AABaricie
  \livretVerC { Temple sacré, séjour tranquille, }
  \livretVer { Où Diane aujourd'hui doit recevoir mes vœux, }
  \livretVer { A mon cœur agité daigne servir d'asyle }
  \livretVerC { Contre un amour trop malheureux. }
  \livretVer { Et toi, dont malgré-moi je rappelle l'image, }
  \livretVer { Cher Prince, si mes vœux ne te sont pas offerts, }
  \livretVerC { Du moins, j'en apporte l'hommage }
  \livretVerC { A la Déesse que tu sers. }
  \livretVerC { Temple sacré, séjour tranquille, }
  \livretVer { Où Diane aujourd'hui doit recevoir mes vœux, }
  \livretVer { A mon cœur agité daigne servir d'asyle }
  \livretVerC { Contre un amour trop malheureux. }
  
  \livretScene\line { SCENE II }
  \livretDescAtt\wordwrap-center\smallCaps { Hippolyte, Aricie. }
  \livretRef #'ABAhippolyteAricie
  \livretPers\line { HIPPOLYTE }
  \livretVer { Princesse, quels apprêts me frappent dans ce Temple ! }
  \livretPers\line { ARICIE }
  \livretVerC { Diane préside en ces lieux ; }
  \livretVer { Lui consacrer mes jours, c'est suivre votre exemple. }
  \livretPers\line { HIPPOLYTE }
  \livretVer { Non, vous les immolez, ces jours si précieux. }
  \livretPers\line { ARICIE }
  \livretVer { J'exécute du Roi la volonté suprême ; }
  \livretVer { A Thésée, à son Fils, ces jours sont odieux. }
  \livretPers\line { HIPPOLYTE }
  \livretVer { Moi, vous haïr ! O Ciel ! Quelle injustice extrême ! }
  \livretPers\line { ARICIE }
  \livretVer { Je ne suis point l'objet de votre inimitié ? }
  \livretPers\line { HIPPOLYTE }
  \livretVerC { Je sens pour vous une pitié }
  \livretVerC { Aussi tendre que l'amour même. }
  \livretPers\line { ARICIE }
  \livretVerC { Quoi ? Le fier Hippolyte... }
  \livretPers\line { HIPPOLYTE }
  \livretVerC { \transparent { Quoi ? Le fier Hippolyte... } Hélas ! }
  \livretVer { Je n'en ai que trop dit ; je ne m'en repens pas, }
  \livretVerC { Si vous avez daigné m'entendre : }
  \livretVer { Mon trouble, mes soûpirs, vos malheurs, vos appas, }
  \livretVer { Tout vous annonce un cœur trop sensible & trop tendre. }
  \livretPers\line { ARICIE }
  \livretVerC { Ah ! Que venez-vous de m'apprendre ! }
  \livretVer { C'en est fait ; pour jamais mon repos est perdu. }
  \livretVerC { Peut-être votre indifférence }
  \livretVerC { Tôt ou tard me l'auroit rendu ; }
  \livretVerC { Mais votre amour m'en ôte l'esperance. }
  \livretVer { C'en est fait ; pour jamais mon repos est perdu. }
  \livretPers\line { HIPPOLYTE }
  \livretVer { Qu'entends-je ! Quel transport de mon ame s'empare ! }
  \livretPers\line { ARICIE }
  \livretVerC { Oubliez-vous qu'on nous sépare ! }
  \livretVer { Quel temple redoutable, & quel affreux lien ! }

  \livretRef #'ABBaricie
  \livretVer { Hippolyte amoureux m'occupera sans cesse ; }
  \livretVerC { Même aux Autels de la Déesse, }
  \livretVer { Je sentirai mon cœur s'élancer vers le sien. }
  \livretVer { Diane & l'univers pour moi ne sont plus rien. }
  \livretVer { Hippolyte amoureux m'occupera sans cesse, }
  \livretVer { Je vivrai pour pleurer son malheur & le mien. }

  \livretRef #'ABChippolyteAricie
  \livretPers\line { HIPPOLYTE }
  \livretVer { Je vous affranchirai d'une loi si cruelle. }
  \livretPers\line { ARICIE }
  \livretVer { Phédre sur sa captive à des droits absolus ; }
  \livretVer { Que sert de nous aimer ? Nous ne nous verrons plus. }
  \livretPers\line { HIPPOLYTE }
  \livretVer { O Diane ! Protége une flamme si belle. }

  \livretRef #'ABDduo
  \livretPers\line { ARICIE ET HIPPOLYTE }
  \livretVerC { Nous brûlons des plus pures flammes, }
  \livretVer { L'Amour n'offre à nos cœurs que d'innocens appas, }
  \livretVerC { Tu ne le défends pas, }
  \livretVerC { Non, non, tu ne le défends pas }
  \livretVer { Quand c'est par la vertu qu'il regne sur nos ames. }

  \livretScene\line { SCENE III }
  \livretDescAtt\wordwrap-center\smallCaps {
    Hippolyte, Aricie, La Grande Prêtresse de Diane, Prêtresses de Diane.
  }
  \livretRef #'ACAmarche
  \livretPers\line { Entrée des Prêtresses }
  \livretRef #'ACBchoeur
  \livretPers\line { CHŒUR }
  \livretVerC { Dans ce paisible séjour, }
  \livretVerC { Regne l’aimable innocence : }
  \livretVerC { Les traits que lance l’Amour }
  \livretVerC { Sur nous n’ont point de puissance ; }
  \livretVerC { Nous jouissons à jamais }
  \livretVerC { des doux charmes de la paix. }

  \livretRef #'ACCair
  \livretDidasP\line { On danse. }

  \livretRef #'ACDpretresse
  \livretPers\line { LA GRANDE PRÊTRESSE }
  \livretVerC { Dieu d'Amour, pour nos asyles, }
  \livretVerC { Tes tourmens ne sont pas faits. }
  \livretVerC { Tous les cœurs y sont tranquilles, }
  \livretVerC { Tes efforts sont inutiles ; }
  \livretVer { Non, non, tu n'en peux troubler la paix. }
  \livretVerC { Tes allarmes }
  \livretVerC { Ont des charmes }
  \livretVerC { Pour qui manque de raison }
  \livretVerC { Mais nos ames }
  \livretVerC { De tes flammes }
  \livretVerC { Reconnoissent le poison : }
  \livretVerC { Va, fuis ; pers l'esperance : }
  \livretVerC { Va, fuis loin de nos cœurs : }
  \livretVer { Tu n'as point de traits vainqueurs. }

  \livretRef #'ACEair
  \livretDidasP\line { On danse. }

  \livretRef #'ACFgavotte
  \livretPers\center-column {
    \line { LA GRANDE PRÊTRESSE }
    \line { alternativement avec le chœur }
  }
  \livretVer { De l'amour fuyez les charmes }
  \livretVer { Craignez jusqu'à ses douceurs, }
  \livretVer { De fleurs il couvre ses armes, }
  \livretVerC { Mais les larmes, }
  \livretVerC { Les allarmes, }
  \livretVer { Sont le prix des tendres cœurs. }
  \livretDidasP\line { On danse. }
}

\markup\n-columns {
  \livretPers\center-column {
    \line { LA GRANDE PRÊTRESSE ET LE CHŒUR }
    \line { alternativement avec le chœur }
  }
  \livretVer { La paix & l'indifférence }
  \livretVer { Comblent ici nos désirs ; }
  \livretVer { Les biens que l'amour dispense }
  \livretVer { Coûtent toujours des soûpirs ; }
  \livretVer { Dans le sein de l'innocence }
  \livretVer { Nous trouvons les vrais plaisirs. }
  \livretDidasP\line { On danse. }

  \livretScene\line { SCENE IV }
  \livretDescAtt\wordwrap-center {
    \smallCaps { Phedre, Œnone, Gardes ; } et les Acteurs de la Scene
    précédente.
  }
  \livretRef #'ADAphedreAricieChoeurHippolyte
  \livretPers\line { PHEDRE, \italic { à Aricie } }
  \livretVer { Princesse, ce grand jour par des nœuds éternels }
  \livretVerC { Va vous unir aux Immortels. }
  \livretPers\line { ARICIE }
  \livretVerC { Je crains que le ciel ne condamne }
  \livretVer { L'hommage que j'apporte aux pieds des saints autels. }
  \livretVerC { Quel cœur viens-je offrir à Diane ! }
  \livretPers\line { PHEDRE }
  \livretVer { Quel discours ! }
  \livretPers\line { ARICIE }
  \livretVer { \transparent { Quel discours ! } Sans remors, comment puis-je en ces lieux, }
  \livretVerC { Offrir un cœur que l'on opprime ? }
  \livretPers\line { CHŒUR DES PRÊTRESSES }
  \livretVer { Non, non, un cœur forcé n'est pas digne des Dieux ; }
  \livretVerC { Le sacrifice en est un crime. }
  \livretPers\line { PHEDRE }
  \livretVer { Quoi ? L'on ose braver le suprême pouvoir ! }
  \livretPers\line { CHŒUR }
  \livretVer { Obéïssez au Dieux ; c'est le premier devoir. }
  \livretPers\line { PHEDRE \italic { à Hippolyte } }
  \livretVerC { Prince, vous souffrez qu'on outrage }
  \livretVerC { Et votre Pere, & votre Roi ! }
  \livretPers\line { HIPPOLYTE \italic { à Phedre } }
  \livretVer { Vous sçavez que respect à Diane m'engage ; }
  \livretVer { Dès mes plus tendres ans je lui donnai ma foi. }
  \livretPers\line { PHEDRE }
  \livretVer { Dieux ! Thésée en son fils trouve un sujet rebelle ! }
  \livretPers\line { HIPPOLYTE }
  \livretVerC { Je sais tout ce que je lui doi ; }
  \livretVer { Mais, ne puis-je pour lui faire éclatter mon zéle, }
  \livretVerC { Qu'en outrageant une Immortelle ? }
  \livretPers\line { PHEDRE }
  \livretVerC { Laissez des détours superflus ; }
  \livretVer { La vertu quelquefois sert de prétexte au crime. }
  \livretPers\line { HIPPOLYTE }
  \livretVer { Quel crime ! }
  \livretPers\line { PHEDRE }
  \livretVer { \transparent { Quel crime ! } Je ne sais qui vous touche le plus, }
  \livretVerC { De l'autel, ou de la victime. }
  \livretPers\line { HIPPOLYTE }
  \livretVerC { Du moins, par d'injustes rigueurs, }
  \livretVerC { Je ne sais point forcer les cœurs. }

  \livretRef #'ADBphedre
  \livretPers\line { PHEDRE }
  \livretVerC { Périsse la vaine puissance }
  \livretVerC { Qui s'éleve contre les Rois : }
  \livretVerC { Tremblez ; redoutez ma vengeance, }
  \livretVer { Et le Temple & l'Autel vont tomber à ma voix. }
  \livretVer { Tremblez, j'ai sû prévoir la désobéïssance ; }
  \livretVerC { Périsse la vaine puissance, }
  \livretVerC { Qui s'éleve contre les Rois. }

  \livretRef #'ADCprelude
  \livretDidasP\line { Bruit de trompettes. }
  \livretDidasP\line { Des Guerriers entrent, & vont briser l'Autel. }

  \livretRef #'ADDpretresseChoeur
  \livretPers\line { LA GRANDE PRÊTRESSE ET LE CHŒUR }
  \livretVerC { Dieux vengeurs, lancez le tonnerre : }
  \livretVer { Périssent les mortels qui vous livrent la guerre. }

  \livretRef #'ADEtonnerre
  \livretDidasP\line { Bruit de tonnerre. }
  \livretDidasP\line { \smallCaps Diane paroît dans une gloire. }
  \livretPers\line { LA GRANDE PRÊTRESSE }
  \livretVerC { "[Nos" cris sont montés jusqu'aux cieux. }
  \livretVer { La Déesse descend ; tremblez, "audacieux.]" }

  \livretScene\line { SCENE V }
  \livretDescAtt\wordwrap-center {
    \smallCaps Diane ; & les Acteurs de la Scene précédente.
  }
  \livretRef #'AEAdianeAricieHippolyte
  \livretPers\line { DIANE \italic { à ses Prêtresses } }
  \livretVer { Ne vous allarmez pas d'un projet téméraire, }
  \livretVer { Tranquilles cœurs, qui vivez sous ma loi. }
  \livretVer { Vous voyez Jupiter se déclarer mon Pere ; }
  \livretVerC { Sa foudre vole devant moi. }
  \livretDidasP\line { à Phedre }
  \livretVerC { Toi, tremble Reine sacrilege ; }
  \livretVer { Penses-tu m'honorer par d'unjustes rigueurs ? }
  \livretVerC { Apprens que Diane protége }
  \livretVerC { La liberté des cœurs. }
  \livretDidasP\line { à Aricie }
  \livretVer { Et toi, triste victime, à me suivre fidéle, }
  \livretVer { Fais toujours expirer les monstres sous tes traits. }
  \livretVer { On peut servir Diane avec le même zéle, }
  \livretVerC { Dans son temple & dans les forêts. }
  \livretPers\line { HIPPOLYTE ET ARICIE }
  \livretVer { Déesse, pardonnez... }
  \livretPers\line { DIANE }
  \livretVer { \transparent { Déesse, pardonnez... } Votre vertu m'est chere ; }
  \livretVer { Et c'est au crime seul que je dois ma colere. }
  \livretDidasP\line { \smallCaps Diane entre dans son temple avec ses pretresses, }
  \livretDidasP\line { & \smallCaps Hippolyte emméne \smallCaps Aricie. }

  \livretScene\line { SCENE VI }
  \livretDescAtt\wordwrap-center { \smallCaps Phedre. }
  \livretRef #'AFAphedre
  \livretPers\line { PHEDRE }
  \livretVer { Quoi ! La terre & le ciel contre moi sont armés ! }
  \livretVer { Ma rivale me brave ! Elle suit Hippolyte ! }
  \livretVer { Ah ! Plus je vois leurs cœurs l'un pour l'autre enflamés, }
  \livretVerC { Plus mon jaloux transport s'irrite. }
  \null
  \livretVerC { Que rien n'échappe à ma fureur ; }
  \livretVer { Immolons à la fois l'amant & la rivale : }
  \livretVerC { Haine, dépit, rage infernale, }
  \livretVerC { Je vous abandonne mon cœur. }
}